<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- item with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2CF607"
                android:endColor="#038BF3"
                android:angle="135"
                android:type="linear" />
            <size
                android:width="64dp"
                android:height="64dp">
            </size>
        </shape>
    </item>
    <!-- what image we set ON gradient: -->
    <item android:drawable="@drawable/ic_smile_transparent" />
</layer-list>