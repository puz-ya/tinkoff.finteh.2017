<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tinkoff.androidcourse.AboutFragment"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/about_scene">

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="About text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:autoLink="email" />

        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/tv_about"
            android:contentDescription="@string/about_logo_descr"
            app:srcCompat="@drawable/ic_cross_red"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/goButton"
        android:text="@string/button_go"
        android:layout_below="@id/about_scene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
